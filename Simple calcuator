#include <iostream>
#include <cmath>  
using namespace std;

void showMenu() {
    
    cout << "1. Addition (+)"<<endl;
    cout << "2. Subtraction (-)"<<endl;
    cout << "3. Multiplication (*)"<<endl;
    cout << "4. Division (/)"<<endl;
    cout << "5. Modulus (%)"<<endl;
    cout << "6. Power (^)"<<endl;
    cout << "7. Square Root (âˆš)"<<endl;
    cout << "8. Exit"<<endl;
    cout << "Choose an option: ";
}

int main() {
    int choice;
    
    do {
        showMenu();
        while (!(cin >> choice)) {  // Check for invalid input
            cout << "Invalid input! Please enter a number: ";
            cin.clear();
            cin.ignore(100, '\n');//	Jab normal integer input lena ho aur galat input ko ignore karna ho.
        }

        double num1, num2;
        int n1, n2;

        switch (choice) {
            case 1: // Addition
                cout << "Enter two numbers: ";
                cin >> num1 >> num2;
                cout << "Result: " << num1 + num2 << endl;
                break;
            
            case 2: // Subtraction
                cout << "Enter two numbers: ";
                cin >> num1 >> num2;
                cout << "Result: " << num1 - num2 << endl;
                break;

            case 3: // Multiplication
                cout << "Enter two numbers: ";
                cin >> num1 >> num2;
                cout << "Result: " << num1 * num2 << endl;
                break;

            case 4: // Division
                cout << "Enter two numbers: ";
                cin >> num1 >> num2;
                if (num2 != 0)
                    cout << "Result: " << num1 / num2 << endl;
                else
                    cout << "Error! Division by zero is not allowed." << endl;
                break;

            case 5: // Modulus
                cout << "Enter two integers: ";
                cin >> n1 >> n2;
                if (n2 != 0)
                    cout << "Result: " << n1 % n2 << endl;
                else
                    cout << "Error! Division by zero is not allowed." << endl;
                break;

            case 6: // Power
                cout << "Enter base and exponent: ";
                cin >> num1 >> num2;
                cout << "Result: " << pow(num1, num2) << endl;
                break;

            case 7: // Square Root
                cout << "Enter number: ";
                cin >> num1;
                if (num1 >= 0)
                    cout << "Result: " << sqrt(num1) << endl;
                else
                    cout << "Error! Cannot find square root of a negative number." << endl;
                break;

            case 8: // Exit
                cout << "Exiting calculator. Goodbye!" << endl;
                break;

            default:
                cout << "Invalid choice! Please select a valid option." << endl;
        }
    } while (choice != 8);

    return 0;
}
